<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Matricis.ViewModels"
             x:Class="Matricis.Views.NewEvaluationPage">
    <ContentPage.BindingContext>
        <vm:NewEvaluationViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding SaveClickedCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Text" FontSize="Medium" />
            <Entry Text="{Binding Evaluation.Title}" FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>